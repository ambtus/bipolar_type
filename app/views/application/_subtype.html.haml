%p=render subtype.attitude.ordinal, realm: subtype.realm
%p.center
  -if @answer
    -if @answer.css(subtype) == "free"
      =link_to subtype.name, discover_path(@answer.next(subtype))
    -else
      =subtype.name
  -else
    =link_to subtype.name, discover_path(Answer.first.next(subtype))
    -if @quad
      %br
      =link_to_unless_current subtype.realm.name, type_path(subtype.realm.path)
      %br
      =link_to_unless_current subtype.attitude.name, type_path(subtype.attitude.path)
