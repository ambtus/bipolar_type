%table.equal

  %tr
    %td.none=render 'td', thing: things.first
    %td
      .bold Summer Siesta
      -if @more
        .plain nap, mild depression
    %td.none=render 'td', thing: things.second
  %tr
    %td
      .bold Spring Training
      -if @more
        .plain speed, playfulness, happiness<br />euphoric mania
    -if @more
      %th
        %table
          %tr
            %td.none
            %td.none 🌻
            %td.none
          %tr
            %td.none 🌱
            %th &orarr;
            %td.none 🍁
          %tr
            %td.none
            %td.none 🌲
            %td.none
    -else
      %th &orarr;
    %td
      .bold Fall Harvest
      -if @more
        .plain power, effectiveness, productivity<br />irritable mania
  %tr
    %td.none=render 'td', thing: things.third
    %td
      .bold Winter Hibernation
      -if @more
        .plain sleep, major depression
    %td.none=render 'td', thing: things.fourth
  %tr
    %th
    %th=render 'layouts/more'
    %th
