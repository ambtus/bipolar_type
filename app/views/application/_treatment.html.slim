h4 id=a treatment
ol
  -s.number.times do |i|
    li
      -case i
      -when 0
        =s.timed_action
        |> : do
        =s.advice(number)
      -when 1
        |> don’t
        =s.opposite.timed_action
        |> : don’t
        =s.opposite.advice(number)
      -when 2
        |> don’t
        =s.flop.timed_action
        |> : don’t
        =s.flop.advice(number)
      -when 3
        =s.flip.timed_action
        |> : do
        =s.flip.advice(number)
