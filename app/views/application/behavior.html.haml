- content_for(:title, @behavior.name)
%div.center=@behavior.horizontal_when
-if @behavior.is_a?(Behavior)
  =render "behavior", behavior: @behavior
  =render "long", behavior: @behavior

-if @behavior.is_a?(Phase)
  -chunks = @behavior.behaviors.each.collect {|b| "#{render 'behavior', behavior: b}".html_safe}
  %table
    -chunks.each do |chunk|
      %tr
        %td.top=chunk

%p.heading=render "behaviors/improvements"
