-if @type
  %h2 Sample behaviors

  %h3 By Happiness
  %table.equal
    %tr
      %th
      %td.distress avoid distress
      %td.guilt avoid guilt
      %td.eustress embrace eustress
      %td.happiness happy, healthy neglect
    %tr
      %th
      %th Do not:
      %th Do:
      %th So you can:
      %th and not have to:
    -@type.disses.each do |distress|
      %tr
        %th=distress.realm.name
        -distress.cycle.subtypes.each do |subtype|
          %td=link_to subtype.eg, subtype_path(subtype.path)
    %tr
      %td{colspan: 3}
      %td &hellip; when you need to
      %td &hellip; unless you want to

  %h3 By Quarter
  %table.equal
    %tr
      %th
      -4.times do |i|
        %th #{(i+1).ordinalize} Quarter
    -@type.dos.each do |distress|
      %tr
        %th=distress.realm.name
        -distress.cycle.by_quarter.each do |subtype|
          %td{class: subtype.class}=link_to subtype.triplet.eg, subtype_path(subtype.path)

