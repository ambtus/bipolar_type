-if @type
  %h2 Sample behaviors

  %h3 By Quarter
  %table
    %tr
      %th
      -4.times do |i|
        %th #{(i+1).ordinalize} Quarter
    -@type.foci.each do |first|
      %tr
        %th=first.realm.name
        -first.cycle.by_quarter.each do |subtype|
          %td{class: subtype.class_type}=link_to subtype.triplet.eg, subtype_path(subtype.path)

  %h3 Theory
  %table
    %tr
      %th
      %td.distress avoid distress<br />(Don&rsquo;t)
      %td.guilt avoid guilt<br />(Do)
      %td.eustress embrace eustress<br />(Do)
      %td.happiness happy, healthy neglect<br />(Don&rsquo;t)
    -@type.disses.each do |first|
      %tr
        %th=first.realm.name
        -first.cycle.subtypes.each do |subtype|
          %td{class: subtype.class_type}=link_to subtype.triplet.eg, subtype_path(subtype.path)

  %h3 In other words
  %table
    %tr
      %th
      %td.eustress To be able to
      %td.guilt You need to
      %td.happiness And
      %td.distress But not
    -@type.foci.each do |first|
      %tr
        %th=first.realm.name
        -first.cycle.by_focus.each do |subtype|
          %td{class: subtype.class_type}=link_to subtype.eg, subtype_path(subtype.path)
    %tr
      %td
      %td.eustress &hellip; more often
      %td.guilt &hellip; whenever possible
      %td.happiness &hellip; only when you want to
      %td.distress &hellip; unless you have to



