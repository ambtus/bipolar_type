- content_for(:title, @type.symbol)

%h2 BipolarType #{@type.index + 1} of 24
%table
  %tr
    %td.bold{colspan:4} Tendencies
  %tr
  -@type.subtypes.each do |subtype|
    %td=tendency subtype
  %tr
    %td.bold{colspan:4} Goals
  %tr
  -@type.subtypes.each do |subtype|
    %td=solution subtype

%table
  %caption
    %h2 Best time to achieve goals
  %tr
    %td.bold{colspan:4} Morning
  %tr
    %td.bold=solution @type.ep
    %td.bold=solution @type.ej
  %tr
    %td=render 'every', subtype: @type.ep
    %td=render 'if', subtype: @type.ej
  %tr
    %td.bold{colspan:2} Midday
  %tr
    %td.bold=solution @type.ij
    %td.bold=solution @type.ip
  %tr
    %td=render 'every', subtype: @type.ij
    %td=render 'if', subtype: @type.ip
  %tr
    %td.bold{colspan:2} Afternoon
  %tr
    %td.bold=solution @type.ej
    %td.bold=solution @type.ep
  %tr
    %td=render 'every', subtype: @type.ej
    %td=render 'if', subtype: @type.ep
  %tr
    %td.bold{colspan:2} Evening
  %tr
    %td.bold=solution @type.ip
    %td.bold=solution @type.ij
  %tr
    %td=render 'every', subtype: @type.ip
    %td=render 'if', subtype: @type.ij
