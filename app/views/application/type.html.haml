%p.header=link_to @type.mbti_prefix + @type.mbtis, mbti_path

=render 'cycle',
  chunks: @type.by_phase.each.collect {|b| "#{render 'quick', behavior: b}".html_safe},
  caption: "<div class='center'>Modify your #{link_to 'Seasons', months_path(@type.symbol)}, #{link_to 'Times', hours_path(@type.symbol)}, or #{link_to 'Preferences', answer_path(Answer.jump_path(*@type.natures))}</div>".html_safe


-@type.natures.each do |behavior|
  %h2=behavior.episode
  =render 'long',
    behavior: behavior,
    goal: @type.goal(behavior)
