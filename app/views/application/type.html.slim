b.larger
  table
    tr
      -@type.tops.each do |b|
        td=b.advice(@number)
    tr
      th colspan = 2 &orarr;
    tr
      -@type.bottoms.each do |b|
        td=b.advice(@number)

div class='button-wrapper'
  =button_to 'Change Words', { id: @type.path + @suffix }, method: :get

div class='button-wrapper'
  -unless @show.size == 16
    =button_to 'Expand All', { format: 'all' }, method: :get
  -unless @show.blank?
    =button_to 'Collapse All', { format: 'none' }, method: :get

-@type.subtypes.each do |s|
  h2=s.goal

  -anchor = "a#{s.number}"
  -if @show.include? anchor
    =render 'subgoal', s: s, a: anchor
    |<
    =show anchor, s.flip.goal, @type.path, @show
  -else
    h3 id=anchor =show "a#{s.number}", s.flip.goal, @type.path, @show

  -anchor = "b#{s.number}"
  -if @show.include? anchor
    =render 'episode', s: s, a: anchor
    =show "b#{s.number}", s.episode, @type.path, @show
  -else
    h3 id=anchor =show anchor, s.episode, @type.path, @show

  -anchor = "c#{s.number}"
  -if @show.include? anchor
    =render 'symptoms', s: s, a: anchor
    =show anchor, 'symptoms', @type.path, @show
  -else
    h4 id=anchor =show anchor, 'symptoms', @type.path, @show

  -anchor = "d#{s.number}"
  -if @show.include? anchor
    =render 'treatment', s: s, a: anchor
    =show anchor, 'treatment', @type.path, @show
  -else
    h4 id=anchor =show anchor, 'treatment', @type.path, @show
