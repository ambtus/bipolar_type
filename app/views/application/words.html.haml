- content_for :title, 'Words'
.right=link_to 'reset to defaults', words_path + '?GPE'
=form_with url: words_path, method: :get do |f|
  %table
    -Realm.each do |realm|
      %tr
        %th{colspan:3}=realm.name
      -realm.subtypes.each do |subtype|
        %tr
          %th.right=subtype.action
          %td=subtype.act
          %td=f.text_field subtype.tla, value: cookies[subtype.tla], maxlength: 80, size: 10
      %tr
        %th{colspan:3}= f.submit 'Save'
