- content_for(:title, "The Four Attitudes")
-I18n.locale = :en
%h2 Short Answer
%table
  -@attitudes.in_groups_of(2) do |row|
    %tr
      -row.each do |attitude|
        %td.half.top
          =link_to attitude.name, attitude_path(attitude.path)
          %p.center=render "answers/#{attitude.path}"
          %p.heading=render "rights/#{attitude.path}"
%h2 Long Answer
=render "attitudes/table"
