%table
  %tr
    %th
    -Realm.all.each do |realm|
      -I18n.locale = realm.locale
      %th=link_to realm.name, realm_path(realm.path)
  -%w{energy sense get energy_reserves use_energy }.each do |word|
    %tr
      -I18n.locale = :en
      %th=(t word).titleize
      -Realm.all.each do |realm|
        -I18n.locale = realm.locale
        %td=t word
  %tr
    %th Reach Goals
    -Realm.all.each do |realm|
      -I18n.locale = realm.locale
      %td #{t :reach} #{t :goals}
  %tr
    %th Waste Energy
    -Realm.all.each do |realm|
      -I18n.locale = realm.locale
      %td
        #{t :waste_energy}
        %br
        (#{t :use_energy} without #{t :reaching} #{t :anything})
