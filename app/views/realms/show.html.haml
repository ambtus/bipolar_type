- content_for(:title, "The #{@realm.name} Realm")
%p.heading #{@realm.use} & #{@realm.get}
%table
  %caption The Four #{@realm.name} Behaviors
  %tr
    %td
      =link_to "Use#{@realm.name}Energy", behavior_path("U#{@realm.symbol}E")
      %br
      =@realm.use_energy
    %th
    %td
      =link_to "Use#{@realm.name}Strength", behavior_path("U#{@realm.symbol}S")
      %br
      =@realm.use_strength
  %tr
    %th
    %th â†»
    %th
  %tr
    %td
      =link_to "Get#{@realm.name}Energy", behavior_path("G#{@realm.symbol}E")
      %br
      =@realm.get_energy
    %th
    %td
      =link_to "Get#{@realm.name}Strength", behavior_path("G#{@realm.symbol}S")
      %br
      =@realm.get_strength
%p.heading #{@realm.deficit} to #{@realm.surplus}
%table
  %caption The Four #{@realm.name} Solutions
  -@realm.solutions.each do |solution|
    %tr
      %td=link_to solution.name, solution_path(solution.symbol)
