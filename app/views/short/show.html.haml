- content_for(:title, "#{@quad.name}")
%table
  %caption If you don’t know what to do:
  %tr
    %td.top.half
      %h2 Consume (E#{@quad.first.both(@quad.second)}P)
      %h3 Fat and Active
      %p.heading
        =@quad.first.cadvice
        %br
        =@quad.second.cadvice
    %td.top.half
      %h2 Don’t Produce (E#{@quad.second.both(@quad.fourth)}J)
      %h3 Thin and Active
      %p.heading
        =@quad.second.padvice
        %br
        =@quad.fourth.padvice
  %tr
    %td.top.half
      %h2 Produce (I#{@quad.first.both(@quad.third)}P)
      %h3 Fat and Inactive
      %p.heading
        =@quad.first.padvice
        %br
        =@quad.third.padvice
    %td.top.half
      %h2 Don’t Consume (I#{@quad.third.both(@quad.fourth)}J)
      %h3 Thin and Inactive
      %p.heading
        =@quad.third.cadvice
        %br
        =@quad.fourth.cadvice
%p.center=link_to "by realm", type_path(@quad.path)