- content_for(:title, 'Overview')
%h2 The Four Realms
%table.center
  -Realm.all.in_groups_of(2).each do |row|
    %tr
      -row.each do |realm|
        %td.half
          =realm.description
          %br
          =link_to realm.name_with_mbti, type_path(realm.path)
%h2 The Four Attitudes
%table.center
  -Attitude.all.in_groups_of(2).each do |row|
    %tr
      -row.each do |attitude|
        %td.half
          =link_to attitude.name_with_mbti, type_path(attitude.path)
%h2 The Sixteen Behaviors by Realm
%table.center
  -Behavior.by_realm.in_groups_of(4).each do |row|
    %tr
      -row.each do |behavior|
        %td.fourth
          =behavior.description
          %br
          =behavior.alt.parenthetical
          %br
          =link_to behavior.name_with_mbti, type_path(behavior.path)
%h2 The Sixteen Behaviors by Attitude
%table.center
  -Behavior.by_attitude.in_groups_of(4).each do |row|
    %tr
      -row.each do |behavior|
        %td.fourth
          =behavior.description
          %br
          =behavior.alt.parenthetical
          %br
          =link_to behavior.name_with_mbti, type_path(behavior.path)
