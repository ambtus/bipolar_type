- content_for(:title, 'The 4 Realms')
%table
  -Realm.all.in_groups_of(2) do |row|
    %tr
      -row.each do |realm|
        %td.half.bordered=render "diamond", :subtypes => realm.subtypes, :center => realm
=render "footnote", :letters => Realm.all.to_sentence, :current => Realm.all.map(&:domain).to_sentence.capitalize
