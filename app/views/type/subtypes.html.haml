- content_for(:title, 'The 16 Subtypes')
%table.center
  -Subtype.all.in_groups_of(2) do |realm_group|
    %tr
      %td.narrow.none
      %td.none{:colspan => 2}
        %h1
          =realm_group.first.realm.name
          realm
    %tr
      %td.narrow.none
      %td.halfish.none
        %h2 Controlled State
      %td.halfish.none
        %h2 Uncontrolled State
    -realm_group.each do |subtype|
      %tr
        %td.narrow.middle.none
          %h2=subtype.name
        %td.halfish.left
          =render subtype.c, :realm => subtype.realm
        %td.halfish.left
          =render subtype.u, :realm => subtype.realm